<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>

    <style name="AppToolbar" parent="AppTheme">

        <item name="android:title">@string/app_name</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="logo">@mipmap/ic_launcher</item>
        <item name="elevation">4dp</item>
        <item name="android:textColor">#FFFFFF</item>

    </style>

    <style name="TextInToolbar">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/text_size_xxsmall</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextPrimaryColor">
        <item name="android:textColor">#000000</item>
        <item name="android:alpha">.87</item>
    </style>

    <style name="TextSecondaryColor">
        <item name="android:textColor">#000000</item>
        <item name="android:alpha">.54</item>
    </style>

    <style name="TextHintColor">
        <item name="android:textColor">#000000</item>
        <item name="android:alpha">.38</item>
    </style>


    <dimen name="left_margin_toolbar">16dp</dimen>
</resources>
