<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_list_header"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:gravity="center"
        android:padding="24dp">

        <ImageView
            android:id="@+id/header_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:contentDescription="@string/cat_name"
            android:src="@drawable/income" />

        <TextView
            android:id="@+id/description_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/header_icon"
            android:layout_toRightOf="@id/header_icon"
            android:text="@string/default_item_name"
            android:textSize="@dimen/text_size_large" />

    </RelativeLayout>

    <ListView
        android:id="@+id/items_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

    </ListView>


</LinearLayout>
